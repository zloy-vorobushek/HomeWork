using System;

namespace HomeWork
{
    class Program
    {
        static void Main()
        {
            int totalImages = 52;
            int picturesRow = 3;
            int filledRows = totalImages / picturesRow;
            int picturesBeyondMeasure = totalImages % filledRows;
            Console.WriteLine($"{filledRows} полностью заполненных рядов и {picturesBeyondMeasure} картинок будетсверх меры.");
        }
    }
}
